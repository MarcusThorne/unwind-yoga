<div class="bg-white hover:bg-gray-50 p-6 flex justify-between items-center cursor-pointer">

  <div class="flex flex-col">
    <p class="font-medium"><%= session.when.strftime("%A %-d %B") %></p>
    <p><%= session.when.strftime("%-I%P") %></p>
  </div>

  <div class="flex space-x-3">
    <%= link_to 'Book', new_event_session_booking_path(session.event_id, session.id), class: "rounded bg-teal hover:bg-teal-light px-6 py-3 text-center text-white" %>
    <% if current_user.try(:admin?) %>
      <%= link_to 'Bookings', event_session_path(session.event_id, session.id), class: "rounded bg-yellow hover:bg-yellow-light text-white px-6 py-3 text-center" %>
    <% end %>
  </div>

</div>
