<div class="rounded-lg shadow-lg bg-white overflow-hidden flex flex-col md:flex-row">

  <div class="flex-none w-64 relative">
    <% if event.photo.attached? %>
    <%= cl_image_tag event.photo.key, class: "absolute inset-0 w-full h-full object-cover object-center	" %>
    <% else %>
    <%= image_tag 'placeholder', class: "absolute inset-0 w-full h-full object-cover" %>
    <% end %>
  </div>


  <div class="flex-auto p-6 flex flex-col justify-between space-y-6">

    <div class="flex justify-between">
      <h3 class="text-2xl font-medium"><%= event.name %></h3>
      <% if current_user.try(:admin?) %>
      <%= link_to edit_event_path(event), class: "hover:text-teal" do %><i class="fas fa-edit"></i><% end %>
      <% end %>
    </div>
    <p><%= event.description %></p>

    <div class="flex justify-end">
      <%= link_to 'View', event, class: "rounded bg-teal hover:bg-teal-light px-6 py-3 text-center text-white" %>
    </div>

  </div>

</div>