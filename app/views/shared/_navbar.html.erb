<div class="w-full sticky top-0 z-20 shadow-lg text-lg lg:text-base">

  <div class="bg-white px-12 py-3 shadow-sm flex flex-col lg:flex-row lg:justify-between lg:items-center space-y-3 lg:space-y-0">

    <div class="flex justify-between items-center">
      <%= link_to root_path do %>
        <%= image_tag 'logo.png', class: "h-16" %>
      <% end %>
      <span id="open-menu" class="lg:hidden"><i class="fas fa-bars"></i></span>
      <span id="close-menu" class="hidden lg:hidden"><i class="fas fa-times"></i></span>
    </div>

    <nav class="hidden lg:flex flex-col lg:flex-row lg:space-x-12 space-y-3 lg:space-y-0">

      <% if current_user.try(:admin?) %>
        <%= link_to 'Admin', home_path, class: "text-teal hover:text-black font-medium" %>
      <% end %>

      <%= link_to 'New to Unwind', new_to_unwind_path, class: "hover:text-teal #{ 'text-teal' if current_page?(new_to_unwind_path) }" %>
      <%= link_to 'How Clean is Clean', cleanliness_path, class: "hover:text-teal #{ 'text-teal' if current_page?(cleanliness_path) }" %>
      <%= link_to 'Studio', studio_path, class: "hover:text-teal #{ 'text-teal' if current_page?(studio_path) }" %>
      <%= link_to 'Resources', resources_path, class: "hover:text-teal #{ 'text-teal' if current_page?(resources_path) }" %>

      <hr class="lg:hidden">

      <% if current_user %>
        <div class="relative">
          <span id="profile-icon" class="hidden lg:block hover:text-teal cursor-pointer"><i class="fas fa-user"></i></span>
          <div id="profile-dropdown" class="lg:hidden lg:absolute lg:right-0 lg:border lg:rounded lg:shadow-lg lg:bg-white space-y-3 lg:space-y-0 lg:divide-y lg:text-center">
            <%= link_to "Profile", edit_user_registration_path, class: "block lg:px-12 lg:py-3 hover:text-teal" %>
            <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "block lg:px-12 lg:py-3 hover:text-teal" %>
          </div>
        </div>
      <% else %>
        <%= link_to 'Login', new_user_session_path, class: "hover:text-teal" %>
      <% end %>
    </nav>
  </div>
</div>
