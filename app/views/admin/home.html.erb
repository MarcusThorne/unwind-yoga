<div class="p-6 grid md:grid-cols-3 gap-6">

  <div class="md:col-span-2">
    <div class="rounded-lg shadow-lg bg-white p-6 flex flex-col">

      <h1 class="border-b pb-3 text-4xl">Dashboard</h1>

      <div class="divide-y">

        <div class="py-6 flex flex-col md:flex-row md:items-center md:space-x-12 space-y-6 md:space-y-0">
          <div class="md:w-5/6 flex flex-col">
            <p class="font-medium">Classes</p>
            <p>View, add, edit, and delete classes</p>
            </p>
          </div>
          <%= link_to 'Classes', events_path, class: "rounded bg-teal hover:bg-teal-light px-6 py-3 text-center text-white" %>
        </div>

        <div class="py-6 flex flex-col md:flex-row md:items-center md:space-x-12 space-y-6 md:space-y-0">
          <div class="md:w-5/6 flex flex-col">
            <p class="font-medium">Bookings</p>
            <p>View and cancel bookings</p>
          </div>
          <%= link_to 'Bookings', bookings_path, class: "rounded bg-pink hover:bg-pink-light px-6 py-3 text-center" %>
        </div>

        <div class="py-6 flex flex-col md:flex-row md:items-center md:space-x-12 space-y-6 md:space-y-0">
          <div class="md:w-5/6 flex flex-col">
            <p class="font-medium">Schedule</p>
            <p>View your schedule in a calendar</p>
          </div>
          <%= link_to 'Schedule', schedule_path, class: "rounded bg-yellow hover:bg-yellow-light px-6 py-3 text-center" %>
        </div>

        <div class="py-6 flex flex-col md:flex-row md:items-center md:space-x-12 space-y-6 md:space-y-0">
          <div class="md:w-5/6 flex flex-col">
            <p class="font-medium">Reviews</p>
            <p>View, add, edit, and delete reviews</p>
          </div>
          <%= link_to 'Reviews', reviews_path, class: "rounded bg-blue hover:bg-blue-light px-6 py-3 text-center" %>
        </div>

      </div>

    </div>
  </div>


  <div>
    <div class="bg-white rounded-lg shadow-lg p-6 space-y-3">

      <%= link_to schedule_path, class: "flex justify-end text-xs" do %>
      <i class="fas fa-external-link-alt hover:text-teal"></i>
      <% end %>

      <%= calendar number_of_days: 7 do |date| %>
      <div class="flex items-center space-x-6">

        <p class="font-semibold"><%= date.strftime("%a") %></p>

        <div class="grid grid-cols-2">
          <% @sessions.each do |session| %>
          <% if session.when.to_date == date %>
          <%= link_to event_path(session.event_id) do %>
          <div class="<%= Event.find(session.event_id).find_color %> px-3 py-1 rounded text-sm text-center">
            <p class="text-sm"><span class="font-medium"><%= Event.find(session.event_id).name %></span> <%= session.when.strftime("%I:%M%P") %></p>
          </div>
          <% end %>
          <% end %>

          <% end %>
        </div>

      </div>
      <% end %>

    </div>
  </div>

</div>