<!-- Wrapper -->
<div class="max-w-sm md:max-w-lg w-full mx-auto mt-12 bg-white p-6 rounded-lg shadow-lg space-y-6">

  <!-- Header -->
  <h1 class="text-4xl text-center">Reset your Password</h1>

  <!-- Errors -->
  <%= render "devise/shared/error_messages", resource: resource %>

  <!-- Form -->
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <div class="flex flex-col space-y-3">

    <div class="flex flex-col">
      <%= f.label :email, class: "font-medium" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "h-12 border rounded pl-3" %>
    </div>

    <%= f.submit "Reset", class: "bg-teal hover:bg-teal-light px-6 py-3 text-center text-white rounded shadow-sm" %>

  </div>
  <% end %>
  <!-- /Form -->

  <!-- Links -->
  <%= render "devise/shared/links" %>

</div>
<!-- /Wrapper -->