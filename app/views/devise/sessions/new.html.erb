<!-- Wrapper -->
<div class="w-2/3 md:w-1/3 mx-auto mt-12 space-y-6">

  <!-- Box -->
  <div class="bg-white p-6 rounded-lg shadow-lg space-y-6">

    <!-- Header -->
    <h1 class="text-4xl text-center">Login</h1>

    <!-- Errors -->
    <%= render "devise/shared/error_messages", resource: resource %>

    <!-- Form -->
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="flex flex-col space-y-3">

      <div class="flex flex-col">
        <%= f.label :email, class: "font-medium" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "h-12 border rounded pl-3" %>
      </div>

      <div class="flex flex-col">
        <%= f.label :password, class: "font-medium" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "h-12 border rounded pl-3" %>
      </div>

      <% if devise_mapping.rememberable? %>
      <div class="flex items-center">
        <%= f.check_box :remember_me, class: "mr-3" %>
        <%= f.label :remember_me, class: "" %>
      </div>
      <% end %>

      <%= f.submit "Login", class: "bg-teal hover:bg-teal-light px-6 py-3 text-center text-white rounded shadow-sm" %>

    </div>
    <% end %>
    <!-- /Form -->

    <!-- Links -->
    <div class="flex justify-between">
      <%= link_to "Sign up", new_registration_path(resource_name), class: "hover:text-teal" %>
      <%= link_to "Forgot your password?", new_password_path(resource_name), class: "hover:text-teal" %>
    </div>

  </div>
  <!-- /Box -->

  <div class="text-center">
    <%= link_to "Didn't receive a confirmation email?", new_confirmation_path(resource_name), class: "hover:text-teal" %>
  </div>

</div>
<!-- /Wrapper -->